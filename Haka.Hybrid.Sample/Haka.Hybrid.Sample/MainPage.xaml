<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Haka.Hybrid.Sample.MainPage"
    xmlns:hybrid="clr-namespace:Haka.Hybrid;assembly=Haka.Hybrid"
    >

    <ScrollView Padding="20">
        <StackLayout Spacing="30">
            <hybrid:SvgHybrid
                BackgroundColor="Orange"
                Source="person.svg"
                Size="100"
                />
            <hybrid:SvgHybrid
                Source="spinner.svg"
                Size="100"
                />
            <hybrid:LottieHybrid
                Source="https://assets3.lottiefiles.com/packages/lf20_3QexPM.json"
                Size="50"
                />
        </StackLayout>
    </ScrollView>

</ContentPage>
